<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/startFragment">


    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.btchat.StartFragment"
        android:label="StartFragment" >
        <action
            android:id="@+id/action_startFragment_to_choiceDeviceFragment"
            app:destination="@id/choiceDeviceFragment" />
    </fragment>
    <fragment
        android:id="@+id/choiceDeviceFragment"
        android:name="com.example.btchat.ChoiceDeviceFragment"
        android:label="ChoiceDeviceFragment" >
        <action
            android:id="@+id/action_choiceDeviceFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.btchat.ChatFragment"
        android:label="ChatFragment" >
        <argument
            android:name="deviceAddress"
            app:argType="string" />
    </fragment>
</navigation>